{%- set connections = salt['pillar.get']('strongswan:connections', {}) %}
# /etc/ipsec.conf - Openswan IPsec configuration file
# Managed by Salt, do not modify
# Source: {{ source }}

version 2.0     # conforms to second version of ipsec.conf specification

# Connections
{%- for conn_name, conn_details in connections.items() %}
conn {{ conn_name }}
  {%- for key, value in conn_details.items() %}
  {{ key }}={{ value }}
  {%- endfor %}
{%- endfor %}
